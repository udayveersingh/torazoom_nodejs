<script src="script.js"></script>



<script>
    $("#language_value").on("change", function(){
        let lang_val = $(this).val();
        localStorage.setItem('current_lang', lang_val);

        var cookieName = 'current_lang';
        var cookieValue = lang_val;
        var daysToExpire = 7;
        const date = new Date();
        date.setTime(date.getTime() + (daysToExpire * 24 * 60 * 60 * 1000)); // Calculate expiration time
        const expires = `expires=${date.toUTCString()}`;
        document.cookie = `${cookieName}=${cookieValue}; ${expires}; path=/`; // Set the cookie

        location.reload();

    })
</script>
